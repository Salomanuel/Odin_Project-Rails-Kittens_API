<%= form_for @kitten do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	
	<%= f.label :age %>
	<%= f.number_field :age, max: 30 %>

	<%= f.label :cuteness %>
	<%= f.select(:cuteness, options_for_select(@scale)) %>

	<%= f.label :softness %>
	<%= f.select(:softness, options_for_select(@scale)) %>

	<%= f.submit %>
<% end %>