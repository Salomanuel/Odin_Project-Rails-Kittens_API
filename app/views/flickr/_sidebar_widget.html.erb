<head>
	<style>
		.flickr ul {
			list-style-type: none;
			margin: 0;
			padding: 0;
		}

		.flickr ul li {
			border-bottom: 0;
			margin: 0;
			padding: 0;
		}

		.flickr_photo{
			width: 75px;
			height: 75px;
			padding: 12px 10px 32px 13px;
			margin: 0
			background: #fff;
		}
	</style>
</head>

<div class="flickr">
	<ul>
		<% photos.each do |row| %>
			<li>
				<% row.each do |p| %>
					<%= link_to(image_tag(get_url(p),
							:class 	=> 'flickr_photo', 
							:title 	=> p.title, 
							:border => 0, 
							:size 	=> '75x75'),
						 get_url(p)) %>
				<% end %>
			</li>
		<% end %>
	</ul>
</div>
